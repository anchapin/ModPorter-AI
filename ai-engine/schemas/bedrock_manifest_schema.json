{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minecraft Bedrock Edition Manifest",
  "description": "Schema for Bedrock Edition add-on manifest.json files",
  "type": "object",
  "required": ["format_version", "header", "modules"],
  "properties": {
    "format_version": {
      "type": "integer",
      "minimum": 1,
      "maximum": 2,
      "description": "Manifest format version (currently 2)"
    },
    "header": {
      "type": "object",
      "required": ["name", "description", "uuid", "version"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "description": "Pack display name"
        },
        "description": {
          "type": "string",
          "maxLength": 512,
          "description": "Pack description"
        },
        "uuid": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
          "description": "Unique identifier for the pack"
        },
        "version": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          },
          "minItems": 3,
          "maxItems": 3,
          "description": "Version as [major, minor, patch]"
        },
        "min_engine_version": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          },
          "minItems": 3,
          "maxItems": 3,
          "description": "Minimum engine version required"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of authors"
        }
      }
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "uuid", "version"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["data", "resources", "client_data", "javascript"],
            "description": "Module type"
          },
          "uuid": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
            "description": "Unique identifier for this module"
          },
          "version": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0
            },
            "minItems": 3,
            "maxItems": 3,
            "description": "Module version"
          },
          "entry": {
            "type": "string",
            "description": "Entry point for script modules (e.g., scripts/main.js)"
          }
        }
      }
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Experimental features this pack requires"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["uuid", "version"],
        "properties": {
          "uuid": {
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
          },
          "version": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0
            },
            "minItems": 3,
            "maxItems": 3
          }
        }
      },
      "description": "Other packs this pack depends on"
    }
  }
}
