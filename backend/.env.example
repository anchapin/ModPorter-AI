# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/modporter_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=.jar,.zip,.mcaddon

# AI Engine Integration
AI_ENGINE_URL=http://localhost:8001
AI_ENGINE_API_KEY=your-ai-engine-api-key

# External APIs (if needed)
MINECRAFT_API_URL=https://api.minecraft.net
BEDROCK_API_URL=https://api.bedrock.net

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Testing
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/modporter_test_db